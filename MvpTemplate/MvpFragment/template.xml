<?xml version="1.0"?>
<template
    format="5"
    revision="5"
    name="Mvp Fragment"
    description="Creates a new  Mvp Fragment"
    minApi="9"
    minBuildApi="14">

    <category value="Jesse"/>
    <formfactor value="Mobile" />

    <parameter
        id="activityName"
        name="Fragment Name"
        type="string"
        constraints="class|nonempty"
        suggest="${layoutToActivity(layoutName)}"
        help="default End of Fragment" />
    <parameter
        id="activityLayout"
        name="Fragment Layout Name"
        type="string"
        constraints="layout|nonempty"
        suggest="fragment_${classToResource(activityName)}"
        help="The name of the layout to create for the Fragment" />

    <parameter
        id="contractName"
        name="Contract Name"
        type="string"
        constraints="class|nonempty"
        suggest="${activityName}"
        help="default End of Contract" />
    <parameter
        id="presenterName"
        name="Presenter Name"
        type="string"
        constraints="class|nonempty"
        suggest="${activityName}"
        help="default End of Presenter" />
    <parameter
        id="modelName"
        name="Model Name"
        type="string"
        constraints="nonempty"
        suggest="${activityName}"
        help="default End of Model" />

    <parameter
        id="packageName"
        name="Package name"
        type="string"
        constraints="package"
        default="com.sugar.demo" />
    <!-- 128x128 thumbnails relative to template.xml -->
    <thumbs>
        <!-- default thumbnail is required -->
        <thumb>template_blank_activity.png</thumb>
    </thumbs>

    <globals file="globals.xml.ftl"/>
    <execute file="recipe.xml.ftl"/>

</template>
